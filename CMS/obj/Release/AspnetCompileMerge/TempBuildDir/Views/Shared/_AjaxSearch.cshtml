@model IEnumerable<CMS.Models.Account>

<table>
    <tr>
        <th class="text-info">Name</th>
        <th class="text-info">Avatar</th>
        <th class="text-info pull-right">Location</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Users.FirstName + " " + item.Users.LastName, item.Users.Username, "User", null, new { @style = "font-size: 13px" })
            </td>
            <td>
                <img src="@item.Users.Avatar" class="img-circle img-thumbnail" width="50" alt="@item.Users.Username" />
            <td class="text-right text-muted">
                @item.Users.Location.Replace(",", "")
            </td>
        </tr>
    }
</table>

