@model CMS.Models.User

@{
    ViewBag.Title = "Create";
}

<h2>Account Registration</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Please fill the fields below</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-sm-2 col-sm-offset-1" })
            <div class="col-xs-12 col-sm-6">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                <p class="help-block">Username can contain any letters or numbers, without spaces</p>
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-sm-2 col-sm-offset-1" })
            <div class="col-xs-12 col-sm-6">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type="Password" } })
                <p class="help-block">Password should be between 8 and 40 characters</p>
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-sm-2 col-sm-offset-1" })
            <div class="col-xs-12 col-sm-6">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                <p class="help-block">Please enter a valid email address</p>
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-sm-2 col-sm-offset-1" })
            <div class="col-xs-12 col-sm-6">
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                <p class="help-block">Please enter your first name</p>
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-sm-2 col-sm-offset-1" })
            <div class="col-xs-12 col-sm-6">
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                <p class="help-block">Please enter your last name</p>
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Avatar, htmlAttributes: new { @class = "control-label col-sm-2 col-sm-offset-1" })
            <div class="col-xs-12 col-sm-6">
                @Html.EditorFor(model => model.Avatar, new { htmlAttributes = new { @class="form-control" } })
                <p class="help-block">Enter a URL to your avatar, this is not mandatory</p>
                @Html.ValidationMessageFor(model => model.Avatar, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Location, htmlAttributes: new { @class = "control-label col-sm-2 col-sm-offset-1" })
            <div class="col-xs-12 col-sm-6">
                @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control" } })
                <p class="help-block">Please enter your city and country</p>
                @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "control-label col-sm-2 col-sm-offset-1" })
            <div class="col-xs-12 col-sm-6">
                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                <p class="help-block">Please provide a valid phone number</p>
                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.About, htmlAttributes: new { @class = "control-label col-sm-2 col-sm-offset-1" })
            <div class="col-xs-12 col-sm-6">
                @Html.TextAreaFor(model => model.About, 5, 74, new { htmlAttributes = new { @class = "form-control" } })
                <p class="help-block">Please tell us what you specialize in</p>
                @Html.ValidationMessageFor(model => model.About, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-xs-6 col-md-6">
                <input type="submit" value="Create" class="btn btn-success btn-block" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


