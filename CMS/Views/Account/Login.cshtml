@model CMS.Models.User

@{
    ViewBag.Title = "Login";
}

<h2>Account Login</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Enter your user details</h4>
        <hr />
        @Html.ValidationSummary(true, "Login failed. Check your login details.", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(u => u.Username, htmlAttributes: new { @class = "control-label col-md-2 col-md-offset-2" })
            <div class="col-xs-12 col-sm-6">
                @Html.TextBoxFor(u => u.Username, null, htmlAttributes: new { @class = "form-control" })
                <p class="help-block">Please enter your username</p>
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(u => u.Password, htmlAttributes: new { @class = "control-label col-md-2 col-md-offset-2" })
            <div class="col-xs-12 col-sm-6">
                @Html.PasswordFor(u => u.Password, htmlAttributes: new { @class = "form-control" })
                <p class="help-block">Please enter your password</p>
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-4 col-md-6 col-xs-12">
                <input type="submit" value="Login" class="btn btn-success btn-block" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
